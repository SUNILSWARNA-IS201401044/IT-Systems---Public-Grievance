<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bharath.publicg.MainPage"
    android:background="?android:attr/colorActivatedHighlight">

    <Button
        android:text="Emergency_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emerBut"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:text="Snap_It"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cam_but"
        android:onClick="launchCamera"
        android:layout_alignBaseline="@+id/emerBut"
        android:layout_alignBottom="@+id/emerBut"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/gallery_thumb"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/emerBut"
        android:layout_toEndOf="@+id/emerBut"
        android:layout_marginTop="50dp"
        android:id="@+id/image_viewID"
        android:minHeight="300dp"
        android:minWidth="300dp" />

</RelativeLayout>
